<!DOCTYPE html>
<html lang="en">
    <%-include('partials/head');%>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<body>
    <%-include('partials/header');%>


    <div class="container mt-4">
        <nav aria-label="breadcrumb" class="small">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/adm/dashboard"><i class="fa-solid fa-house me-1"></i>Dashboard</a></li>
                <!-- <li class="breadcrumb-item"><a href="#">Data</a></li> -->
                <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
            </ol>
        </nav>
        <hr>

        <div class="d-flex justify-content-between">
            <div>
                <a class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#addKbliModal">Tambah Data</a>
            </div>
            <input class="form-control w-25" type="text" id="searchInput" placeholder="Search">
        </div>

        <%-include('kbli/add_kbli');%>
    </div>


    <div class="container mt-5">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">Keterangan KBLI</th>
                <th scope="col">Nomor KBLI</th>
                <th scope="col" class="text-center">Aksi</th>
              </tr>
            </thead>
            <tbody>
            <% for(let i=0; i < kbliData.length; i++) { %>

              <tr>
                <th scope="row"><%= i + 1 %></th>
                <td><%= kbliData[i].keterangan %></td>
                <td><%= kbliData[i].nomor_kbli %></td>
                <td class="text-center">
                    <a href="/adm/data/kbli" class="btn btn-light btn-sm"><i class="fa-regular fa-eye"></i></a>

                    <a class="btn btn-light btn-sm delete-btn" data-bs-toggle="tooltip" data-bs-title="Delete this data">
                        <i class="fa-solid fa-trash-can"></i>
                    </a>
                </td>
              </tr>

              <% } %>

            </tbody>
        </table>





    <!-- Pagination halaman data keluarga -->
      <% if (kbliData.length > 0) { %>
        <nav aria-label="Keluarga Pagination">
          <ul class="pagination justify-content-center mt-5">
      
            <% if (currentPage == 1) { %>
              <li class="page-item disabled"><a href="#" class="page-link">First</a></li>
            <% } else { %>
              <li class="page-item"><a href="/adm/data/kbli?page=1&limit=<%= limit %>" class="page-link">First</a></li>
            <% } %>
      
            <% var i = (Number(currentPage) > 5 ? Number(currentPage) - 4 : 1) %>
            <% if(i !== 1) { %>
              <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
            <% } %>
      
            <% for(; i <= (Number(currentPage) + 4) && i <= totalPages; i++ ) { %>
              <% if (i == currentPage) { %>
                <li class="page-item disabled"><a href="#" class="page-link"><%= i %></a></li>
              <% } else { %>
                <li class="page-item"><a href="/adm/data/kbli?page=<%= i %>&limit=<%= limit %>" class="page-link"><%= i %></a></li>
              <% } %>
              <% if (i == Number(currentPage) + 4 && i < totalPages) { %>
                <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
              <% } %>
            <% } %>
      
            <% if (currentPage == totalPages) { %>
              <li class="page-item disabled"><a href="#" class="page-link">Last</a></li>
            <% } else { %>
              <li class="page-item"><a href="/adm/data/kbli?page=<%= totalPages %>&limit=<%= limit %>" class="page-link">Last</a></li>
            <% } %>
      
          </ul>
        </nav>
      <% } %>

    </div>
    <script src="/js/tooltip.js"></script>
</body>
</html> 